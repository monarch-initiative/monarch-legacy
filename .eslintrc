//http://eslint.org/docs/rules/

extends: 'eslint:recommended'

env:
  es6: true
  node: true
  browser: true

globals:
  "jQuery": true
  "$": true

rules:
  indent: [0, 2, {SwitchCase: 1}]
  block-spacing: 2
  brace-style: 0            ### MonarchPrefer: [2, "stroustrup", { "allowSingleLine": true }]
  camelcase: 0              ### MonarchPrefer: [2, { properties: "never" }]
  callback-return: [2, ["cb", "callback", "next"]]
  comma-spacing: 0          ### MonarchPrefer: 2
  comma-dangle: 0           ### MonarchPrefer: 2
  comma-style: [2, "last"]
  consistent-return: 2
  curly: 0                  ### MonarchPrefer: [2, "all"]
  default-case: 2
  dot-notation: [0, { allowKeywords: true }]
  eol-last: 2
  eqeqeq: 0                 ### MonarchPrefer: 2
  func-style: 0             ### MonarchPrefer: [2, "declaration", { "allowArrowFunctions": true }]
  guard-for-in: 0
  key-spacing: 0            ### MonarchPrefer: [2, { beforeColon: false, afterColon: true }]
  new-cap: 2
  new-parens: 2
  no-alert: 2
  no-array-constructor: 2
  no-caller: 2
  no-console: 0
  no-delete-var: 2
  no-empty: 0
  no-empty-label: 2
  no-eval: 2
  no-extend-native: 2
  no-extra-bind: 2
  no-extra-semi: 0          ### MonarchPrefer: 2
  no-fallthrough: 2
  no-floating-decimal: 2
  no-implied-eval: 2
  no-invalid-this: 0        ### MonarchPrefer: 2
  no-iterator: 2
  no-label-var: 2
  no-labels: 2
  no-lone-blocks: 2
  no-loop-func: 2
  no-mixed-spaces-and-tabs: 0   ### MonarchPrefer: [2, false]
  no-multi-spaces: 0            ### MonarchPrefer: 2
  no-multi-str: 2
  no-native-reassign: 2
  no-nested-ternary: 2
  no-new: 2
  no-new-func: 2
  no-new-object: 2
  no-new-wrappers: 2
  no-octal: 2
  no-octal-escape: 2
  no-process-exit: 2
  no-proto: 2
  no-redeclare: 2
  no-return-assign: 2
  no-script-url: 2
  no-sequences: 2
  no-shadow: 2
  no-shadow-restricted-names: 2
  no-spaced-func: 2
  no-trailing-spaces: 0       ### MonarchPrefer: 2
  no-undef: 0
  no-undef-init: 2
  no-undefined:  0            ### MonarchPrefer: 2
  no-underscore-dangle: 0
  no-unused-expressions: 2
  no-unused-vars: 0           ### MonarchPrefer: [2, {vars: "all", args: "after-used"}]
  no-use-before-define: 0
  no-useless-concat: 2
  no-with: 2
  quotes: 0                   ### MonarchPrefer: [2, "single"]
  linebreak-style:
    - 2
    - unix
  radix: 2
  require-jsdoc: 0
  semi: 2
  semi-spacing: [2, {before: false, after: true}]
  space-after-keywords: 0     ### MonarchPrefer: [2, "always"]
  space-before-blocks: 0      ### MonarchPrefer: 2
  space-before-function-paren: 0      ### MonarchPrefer: [2, "never"]
  space-infix-ops: 0          ### MonarchPrefer: 2
  space-return-throw-case: 2
  space-unary-ops: [2, {words: true, nonwords: false}]
  spaced-comment: [0, "always", { exceptions: ["-"]}]
  strict: 0                   ### MonarchPrefer: [2, "global"]
  valid-jsdoc: [0, { prefer: { "return": "returns"}}]
  wrap-iife: 0                ### MonarchPrefer: 2
  yoda: [2, "never"]

  # Previously on by default in node environment
  no-catch-shadow: 0
  no-console: 0
  no-mixed-requires: 2
  no-new-require: 2
  no-path-concat: 2
  no-process-exit: 2
  global-strict: [0, "always"]
  handle-callback-err: [2, "err"]

