                        <input id="longestcheck" type="checkbox" name="longestOnly"
                        {{#longestOnly}} checked="true" {{/longestOnly}}
                        value="true">Always use longest match</input>
                        </br>
                        <button type="submit" class="btn btn-annotate btn-default btn-monarch-main monarch-blue">Search</button>  
                    </form>
                </div>
                {{#hasResults}}
                    <div id="markedup" class="first category">
                {{/hasResults}}
                {{^hasResults}}
