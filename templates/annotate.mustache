                            <div><b>Phenotype Profile Size</b>: {{numPhenotypes}}</div>
                            <input type="hidden" name="input_items" value="{{inputItems}}"/>
                            <input type="hidden" name="target_species" value="all"/>
                            <input type="hidden" name="mode" value="search"/>
                            <button type="submit" class="btn btn-annotate btn-default btn-monarch-main monarch-blue">Search!</button>  
                        </form>
                    {{/hasResults}}
